---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = { title: 'About — OR9 Systems' };
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?auto=format&fit=crop&w=2070&q=80',
      alt: 'Operational calm',
    }}
  >
    <Fragment slot="title">
      OR9 Systems Inc
    </Fragment>

    <Fragment slot="subtitle">
      A boutique consultancy focused on production support and security contracting. Senior, hands-on help to reduce
      incidents and risk. Founder-led and deliberately small to stay responsive.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats title="At a glance" stats={[{ title: 'Founded', amount: '2025' }, { title: 'Team', amount: 'Founder-led' }]} />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Principles"
    subtitle="Calm operations, practical security, and documentation that sticks."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Stability first',
        description: 'Stabilize production, then improve with measurement and small batches.',
        icon: 'tabler:heartbeat',
      },
      {
        title: 'Security by default',
        description: 'Guardrails and defaults that reduce risk without slowing delivery.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Teach as we go',
        description: 'Pairing and docs so improvements last after the engagement.',
        icon: 'tabler:book',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      { title: 'Reliability', description: 'On-call help, SLOs, and incident processes that work.', icon: 'tabler:activity' },
      { title: 'Hardening', description: 'Prioritized fixes, baseline guardrails, and safer defaults.', icon: 'tabler:lock' },
      { title: 'Enablement', description: 'Runbooks and documentation that empower your team.', icon: 'tabler:notes' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?auto=format&fit=crop&w=1740&q=80',
      alt: 'Principles Image',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Engagement pattern"
    subtitle="Short call → quick plan → deliver early wins → sustain improvements"
    items={[
      { title: 'Discovery', description: 'Understand current pain and constraints.' },
      { title: 'Stabilization', description: 'Triage, runbooks, and guardrails to stop repeat fires.' },
      { title: 'Enablement', description: 'Docs and pairing so the team can sustain improvements.' },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Focus areas"
    subtitle="Cloud, containers, observability, CI/CD, identity, and policy-as-code"
    isReversed={true}
    callToAction={{
      text: 'Contact',
      href: '/contact',
    }}
    items={[
      { title: 'Reliability', description: 'SLOs, on-call, and incident response.', icon: 'tabler:globe' },
      { title: 'Security', description: 'Identity, network, runtime, and supply chain.', icon: 'tabler:message-star' },
      { title: 'Delivery', description: 'Safe pipelines and policy-as-code guardrails.', icon: 'tabler:award' },
    ]}
  />

  <!-- Features2 Widget ************** -->

  

  <!-- Features2 Widget ************** -->

  <Features2 title="Get in touch" tagline="Contact" columns={2} items={[{ title: 'Email', description: 'contact@or9systems.com', icon: 'tabler:mail' }, { title: 'Location', description: 'Remote-first', icon: 'tabler:map-pin' }]} />
</Layout>
