---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
// Removed unused blog/stats widgets for a focused consulting homepage
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'OR9 Systems Inc — Production Support & Security Consulting',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[{ variant: 'primary', text: 'Contact us', href: '/contact', icon: 'tabler:mail' }]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'OR9 Systems Hero' }}
  >
    <Fragment slot="title">
      OR9 Systems Inc<br />
      <span class="text-accent dark:text-white">Production Support & Security Consulting</span>
    </Fragment>

    <Fragment slot="subtitle">
      Production support and security consulting for modern teams. On-call partnership, incident response, and practical hardening.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="What we do" description="Hands-on reliability engineering and pragmatic security for your systems." />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Services"
    title="How we help"
    subtitle="Focused, senior help for critical operations and security outcomes."
    items={[
      {
        title: 'Production Support',
        description: 'On-call, incident response, and SLO-driven reliability. We stabilize and improve prod.',
        icon: 'tabler:alert-triangle',
      },
      {
        title: 'Security Hardening',
        description: 'Threat modeling, hardening baselines, vulnerability triage, and prioritized remediation.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Security Contracting',
        description: 'Short, outcome-focused engagements for audits, fixes, and secure-by-default configuraton.',
        icon: 'tabler:lock-check',
      },
      {
        title: 'Automation',
        description: 'Runbooks, observability, and CI/CD improvements that reduce toil and speed recovery.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Advisory',
        description: 'Policy to practice: practical guidance that fits your size and risk profile.',
        icon: 'tabler:notes',
      },
      {
        title: 'Flexible Engagements',
        description: 'From hourly help to scoped projects. Start small and scale as needed.',
        icon: 'tabler:briefcase',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Approach"
    title="Calm operations, practical security"
    items={[
      { title: 'Stabilize first', description: 'Triaging issues, taming alerts, and fixing the sharp edges that cause repeat incidents.' },
      { title: 'Document and enable', description: 'Runbooks and clear ownership to make recovery faster and safer.' },
      { title: 'Automate the boring', description: 'Dashboards, alerts, and CI/CD guardrails that prevent regressions.' },
    ]}
    image={{ src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=2070&q=80', alt: 'Operational calm' }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Stabilize, then improve</h3>
      We reduce noise, create clarity, and leave you with durable practices.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      { title: 'On-call partner', description: 'Backup during incidents and help reducing pages over time.' },
      { title: 'Security baseline', description: 'Prioritized fixes and safer defaults that stick.' },
      { title: 'Faster recovery', description: 'Observability and runbooks that save minutes when it matters.' },
      { title: 'Momentum', description: 'Quick wins first, compounding improvements next.' },
    ]}
    image={{ src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?auto=format&fit=crop&w=2194&q=80', alt: 'Blueprint Image' }}
  >
    <Fragment slot="content">Practical outcomes over paperwork.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      { title: 'Clear ownership', description: 'Who does what in an incident and how to escalate cleanly.' },
      { title: 'Right alerts', description: 'Signal over noise, with paging tied to SLOs.' },
      { title: 'Better defaults', description: 'Secure-by-default configs, rotated secrets, and least privilege.' },
      { title: 'Knowledge transfer', description: 'Pairing and docs so improvements last.' },
    ]}
    image={{ src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?auto=format&fit=crop&w=2070&q=80', alt: 'Team practices' }}
  >
    <Fragment slot="content">Make incidents rarer and easier.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How engagements work"
    items={[
      { title: 'Intro call', description: 'Understand goals, environment, and constraints.', icon: 'tabler:phone' },
      { title: 'Quick plan', description: 'Prioritized outcomes with timeboxed scope.', icon: 'tabler:list-check' },
      { title: 'Deliver', description: 'Early wins first, then sustain improvements.', icon: 'tabler:rocket' },
      { title: 'Enable', description: 'Docs and pairing so changes last.', icon: 'tabler:book' },
    ]}
    image={{ src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?auto=format&fit=crop&w=987&q=80', alt: 'Steps image' }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Engagement examples"
    subtitle="Common scopes we deliver"
    tagline="Packages"
    items={[
      {
        title: 'Incident Readiness (2 weeks)',
        description: 'Runbooks, paging, dashboards, and postmortem workflow tuned to your stack.',
        icon: 'tabler:alert-triangle',
      },
      {
        title: 'Security Baseline (2–4 weeks)',
        description: 'Audit, prioritized fixes, and hardening guardrails with quick wins first.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'On-call Partner (ongoing)',
        description: 'Escalation backup and weekly improvements to reduce repeat incidents.',
        icon: 'tabler:phone-call',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="FAQs"
    subtitle="Quick answers about how we work"
    tagline="Process"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Who are you?',
        description: 'OR9 Systems is a boutique consultancy led by its founder, focused on production support and security.',
      },
      {
        title: 'How do engagements start?',
        description: 'We start with a short call to understand pain points, then propose a lightweight plan with measurable outcomes.',
      },
      {
        title: 'What is availability?',
        description: 'Time is limited; we take on a small number of clients to ensure focus. If we’re full, we can waitlist you.',
      },
      {
        title: 'Which stacks?',
        description: 'Cloud (AWS/GCP/Azure), Linux, Kubernetes, Terraform, Docker, GitHub Actions, Datadog/Prometheus, and more.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  

  <!-- CallToAction Widget *********** -->

  <CallToAction actions={[{ variant: 'primary', text: 'Schedule a call', href: '/contact', icon: 'tabler:calendar' }]}>
    <Fragment slot="title">Ready to reduce incidents and risk?</Fragment>
    <Fragment slot="subtitle">Tell us where it hurts. We’ll help.</Fragment>
  </CallToAction>
</Layout>
