---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = { title: 'Services — OR9 Systems' };
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Production Support & Security"
    subtitle="Focused help to stabilize production and reduce security risk. Outcomes over deliverables."
    actions={[{ variant: 'primary', text: 'Contact us', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'OR9 Hero Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Core offerings"
    subtitle="Engagements tailored to your stack and constraints"
    columns={3}
    items={[
      {
        title: 'On-call & Incident Response',
        description: 'Sane paging, escalation, and retrospectives. Calmer operations and faster recovery.',
        icon: 'tabler:alarm',
      },
      {
        title: 'Security Hardening',
        description: 'Threat model, prioritize, and harden. From IAM and network to runtime and supply chain.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Observability & Runbooks',
        description: 'Dashboards, alerts, and step-by-step remediation that save minutes when it matters.',
        icon: 'tabler:timeline',
      },
      {
        title: 'Secure Delivery',
        description: 'CI/CD guardrails, secrets hygiene, and policy-as-code to keep changes safe and fast.',
        icon: 'tabler:truck',
      },
      {
        title: 'Advisory',
        description: 'Lightweight guidance on standards, compliance posture, and practical risk reduction.',
        icon: 'tabler:notes',
      },
      {
        title: 'Rapid Assessments',
        description: 'Short scoped reviews with prioritized, actionable recommendations.',
        icon: 'tabler:clipboard-check',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      { title: 'Senior, practical help', description: 'We reduce noise, risk, and mean-time-to-recovery.', icon: 'tabler:target' },
      { title: 'Work with your stack', description: 'Cloud-native, Linux, containers, IaC, observability, and more.', icon: 'tabler:stack' },
      { title: 'Teach as we go', description: 'Docs, runbooks, and pairing so your team gets stronger.', icon: 'tabler:book' },
      { title: 'Small and focused', description: 'Founder-led, no bureaucracy. Clear communication, fast results.', icon: 'tabler:sparkles' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1525909002-1b05e0c869d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
      alt: 'Features Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Main Features</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      { title: 'Fewer incidents', description: 'Systems that page less and recover faster.', icon: 'tabler:heartbeat' },
      { title: 'Lower risk', description: 'Hardening that matters, aligned to your environment.', icon: 'tabler:shield' },
      { title: 'Stronger team', description: 'Runbooks and practices that stick.', icon: 'tabler:users' },
      { title: 'Momentum', description: 'Quick wins first, compounding improvements next.', icon: 'tabler:trending-up' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664688-cf412ec27db2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Benefits Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Benefits</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

 <!-- Client feedback **************** -->
  <Testimonials
    title="Client feedback"
    testimonials={[
      {
        name: 'Chadley Tan',
        job: 'Production Support, Intact',
        testimonial:
          'Delivers out-of-the-box solutions under pressure and leads by example reliable, fast, and collaborative.',
      },
      {
        name: 'Reza Soltani',
        job: 'Professor & Supervisor, Lassonde',
        testimonial:
          'Proactive leader who drove key parts of our security project—insightful, resilient, and high-impact.',
      },
    ]}
  />
  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[{ variant: 'primary', text: 'Schedule a call', href: '/contact' }]}
    title="Tell us where it hurts"
    subtitle="We’ll propose a lightweight plan with measurable outcomes."
  />
</Layout>
